<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"        
        android:orientation="horizontal" >
	     <TextView
	         android:id="@+id/weather_title"
	         android:layout_weight="8"
	         android:layout_width="0dp"
	         android:layout_height="match_parent" />
        <Button
            android:id="@+id/update_weather"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" 
            android:text="更新"/>	        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal">
        <TextView
	         android:id="@+id/forecast_date"
	         android:layout_weight="1"
	         android:layout_width="0dp"
	         android:layout_height="match_parent" />
        <TextView
	         android:id="@+id/update_time"
	         android:layout_weight="1"
	         android:layout_width="0dp"
	         android:layout_height="match_parent" />      
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.2"
        android:orientation="horizontal">
        <LinearLayout
	        android:layout_weight="1"
	        android:orientation="vertical"
	        android:layout_width="0dp"
	        android:layout_height="match_parent">
	        <TextView
		         android:id="@+id/now_temp"
		         android:layout_weight="3"
		         android:layout_height="0dp"
		         android:layout_width="match_parent" />      
	        <TextView
		         android:id="@+id/max_min_temp"
		         android:layout_weight="1"
		         android:layout_height="0dp"
		         android:layout_width="match_parent" /> 		                
        </LinearLayout>
        
        <ImageView
            android:id="@+id/cond_imag"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/clond">
            
        </ImageView>
    </LinearLayout>
    
    <LinearLayout
        android:layout_weight="0.5"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:orientation="horizontal">
		<TextView
		    android:id="@+id/rainy_pos"
		    android:layout_weight="1"
		    android:layout_width="0dp"
		    android:layout_height="match_parent"/>
		<TextView
		    android:id="@+id/pm25_value"
		    android:layout_weight="1"
		    android:layout_width="0dp"
		    android:layout_height="match_parent"/>
	</LinearLayout>
	
    <LinearLayout
        android:layout_weight="2.2"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:orientation="horizontal">
		<LinearLayout
			android:layout_weight="1"
			android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:orientation="vertical">
			<TextView
			    android:id="@+id/d2_date"
			    android:layout_weight="1"
			    android:layout_height="0dp"
			    android:layout_width="match_parent"/>
			<TextView
			    android:id="@+id/d2_temp"
			    android:layout_weight="1"
			    android:layout_height="0dp"
			    android:layout_width="match_parent"/>
			<TextView
			    android:id="@+id/d2_cond"
			    android:layout_weight="1"
			    android:layout_height="0dp"
			    android:layout_width="match_parent"/>
		</LinearLayout>
		<LinearLayout
			android:layout_weight="1"
			android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:orientation="vertical">
			<TextView
			    android:id="@+id/d3_date"
			    android:layout_weight="1"
			    android:layout_height="0dp"
			    android:layout_width="match_parent"/>
			<TextView
			    android:id="@+id/d3_temp"
			    android:layout_weight="1"
			    android:layout_height="0dp"
			    android:layout_width="match_parent"/>
			<TextView
			    android:id="@+id/d3_cond"
			    android:layout_weight="1"
			    android:layout_height="0dp"
			    android:layout_width="match_parent"/>			
		</LinearLayout>
		<LinearLayout
			android:layout_weight="1"
			android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:orientation="vertical">
			<TextView
			    android:id="@+id/d4_date"
			    android:layout_weight="1"
			    android:layout_height="0dp"
			    android:layout_width="match_parent"/>
			<TextView
			    android:id="@+id/d4_temp"
			    android:layout_weight="1"
			    android:layout_height="0dp"
			    android:layout_width="match_parent"/>
			<TextView
			    android:id="@+id/d4_cond"
			    android:layout_weight="1"
			    android:layout_height="0dp"
			    android:layout_width="match_parent"/>			
														    
		</LinearLayout>
	</LinearLayout>
	
    <ListView
        android:layout_weight="4.5"
        android:layout_height="0dp"
        android:layout_width="match_parent">
        
        </ListView>
    
    
</LinearLayout>
